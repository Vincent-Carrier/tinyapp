<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% if (username) { %>
      <button class="btn disabled"> Logged in as <%= username %> </button>
      <form action="/logout" method="POST" class="form-inline my-2 my-lg-0">
        <div>
          <button class="btn btn-outline-warning my-2 my-sm-0" type="submit" >Logout</button>
        </div>
      </form>
    <% } else { %>
      <form action="/login" method="POST" class="form-inline my-2 my-lg-0">
        <div>
          <label for="longURL">Enter your username: </label>
          <input class="form-control mr-sm-2" type="text" name="username">
          <button class="btn btn-outline-success my-2 my-sm-0" type="submit" >Submit</button>
        </div>
      </form>
    <% } %>
  </nav>
</header>
